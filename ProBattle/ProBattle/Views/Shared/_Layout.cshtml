    <!-- styles -->
    <link href="~/Content/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/css/owl.carousel.css" rel="stylesheet">
    <link href="~/Content/css/owl.theme.css" rel="stylesheet">
    <link href="~/Content/css/custom.css" rel="stylesheet" />

    <!-- theme stylesheet -->
    <link href="~/Content/css/style.default.css" rel="stylesheet" id="theme-stylesheet">

    <!-- your stylesheet with modifications -->
    <link href="~/Content/css/custom.css" rel="stylesheet">

    <script src="~/Content/js/respond.min.js"></script>

    <link rel="shortcut icon" href="favicon.png">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Intekhab Supply Depot", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            @{
                if (Session["username"] != null && Session["userId"] != null)
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink(Session["username"].ToString(), "AdminPanel", "Customer")</li>
                            <li>@Html.ActionLink("Logout", "logout", "Customer")</li>


                            <li>@Html.ActionLink("Admin Sign In", "loginAdmin", "Admin")</li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Sign Up", "register", "Customer")</li>
                            <li>@Html.ActionLink("Login", "login", "Customer")</li>


                            <li>@Html.ActionLink("Admin Sign In", "loginAdmin", "Admin")</li>
                        </ul>
                    </div>
                }
            }
            
            </div>
            </div>

            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <!-- *** FOOTER ***
    _________________________________________________________ -->
                    <div id="footer" data-animate="fadeInUp">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-3 col-sm-6">
                                    <h4>Pages</h4>

                                    <ul>
                                        <li>
                                            <a href="text.html">About us</a>
                                        </li>
                                        <li>
                                            <a href="text.html">Terms and conditions</a>
                                        </li>
                                        <li>
                                            <a href="faq.html">FAQ</a>
                                        </li>
                                        <li>
                                            <a href="contact.html">Contact us</a>
                                        </li>
                                    </ul>

                                    <hr>

                                    <h4>User section</h4>

                                    <ul>
                                        <li>
                                            <a href="#" data-toggle="modal" data-target="#login-modal">Login</a>
                                        </li>
                                        <li>
                                            <a href="register.html">Regiter</a>
                                        </li>
                                    </ul>

                                    <hr class="hidden-md hidden-lg hidden-sm">

                                </div>
                                <!-- /.col-md-3 -->

                                <div class="col-md-3 col-sm-6">

                                    <h4>Categories</h4>

                                    <h5>Products</h5>

                                    <ul>
                                        <li>
                                            <a href="category.html">Dairy</a>
                                        </li>
                                        <li>
                                            <a href="category.html">JunkFood</a>
                                        </li>
                                        <li>
                                            <a href="category.html">Cooking Utensils</a>
                                        </li>
                                    </ul>



                                    <hr class="hidden-md hidden-lg">

                                </div>
                                <!-- /.col-md-3 -->

                                <div class="col-md-3 col-sm-6">

                                    <h4>Where to find us</h4>

                                    <p>
                                        <strong>IBA</strong>


                                    </p>

                                    <a href="contact.html">Go to contact page</a>

                                    <hr class="hidden-md hidden-lg">

                                </div>
                                <!-- /.col-md-3 -->



                                <div class="col-md-3 col-sm-6">

                                    <h4>Get the news</h4>

                                    <p class="text-muted">Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas.</p>

                                    <form>
                                        <div class="input-group">

                                            <input type="text" class="form-control">

                                            <span class="input-group-btn">

                                                <button class="btn btn-default" type="button">Subscribe!</button>

                                            </span>

                                        </div>
                                        <!-- /input-group -->
                                    </form>

                                    <hr>

                                    <h4>Stay in touch</h4>

                                    <p class="social">
                                        <a href="#" class="facebook external" data-animate-hover="shake"><i class="fa fa-facebook"></i></a>
                                        <a href="#" class="twitter external" data-animate-hover="shake"><i class="fa fa-twitter"></i></a>
                                        <a href="#" class="instagram external" data-animate-hover="shake"><i class="fa fa-instagram"></i></a>
                                        <a href="#" class="gplus external" data-animate-hover="shake"><i class="fa fa-google-plus"></i></a>
                                        <a href="#" class="email external" data-animate-hover="shake"><i class="fa fa-envelope"></i></a>
                                    </p>


                                </div>
                                <!-- /.col-md-3 -->

                            </div>
                            <!-- /.row -->

                        </div>
                        <!-- /.container -->
                    </div>
